<nav>
  <a href="index.html" id="logo"></a>
  <ul class="desktop_nav">
    <li><a href="/">Forside</a></li>
    <li><a href="/about">Om Aria</a></li>
    <li><a href="/#owner" class="btn btn_nav"> Kontakt </a></li>
  </ul>
  <div id="mobile_nav">
    <div class="line"></div>
    <div class="line"></div>
    <div class="line"></div>
  </div>
</nav>

<style>
  header {
    height: 92px;
  }

  nav {
    width: 100%;
    background-color: whitesmoke;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    z-index: 1000;
    color: var(--color-one);
  }

  #logo {
    background-image: url("/logobar.svg");
    aspect-ratio: 379.783 / 113.028;
    background-size: 100%;
    width: 200px;
    background-size: cover;
  }

  .desktop_nav {
    display: flex;
    align-items: center;
    gap: 4rem;
  }

  .desktop_nav li,
  .desktop_nav li a {
    font-family: "Oswald", sans-serif;
    font-weight: 500;
    font-size: 1.2rem;
    color: var(--main-text);
    letter-spacing: 0.15rem;
    margin: 0;
    text-transform: uppercase;
    transition: 0.5s;
  }

  .desktop_nav li a:hover {
    text-decoration: underline;
  }

  .desktop_nav li a.btn_nav {
    color: white;
  }

  #mobile_nav {
    display: none;
    width: 30px;
    cursor: pointer;
  }

  #mobile_nav .line {
    width: 100%;
    height: 5px;
    margin-bottom: 5px;
    background-color: var(--color-one);
    transition: 0.2s linear;
    border-radius: 100px;
  }

  .dropdown_mobile {
    display: none;
  }

  /* MOBILE */

  @media (max-width: 800px) {
    .desktop_nav {
      display: none;
    }

    #mobile_nav {
      display: block;
    }

    #mobile_nav.active .line {
      transition: 0.2s linear;
    }

    #mobile_nav.active .line:nth-child(1) {
      transform: rotate(45deg) translate(8px, 9.5px);
    }

    #mobile_nav.active .line:nth-child(2) {
      opacity: 0;
      transition: 0.15s linear;
    }

    #mobile_nav.active .line:nth-child(3) {
      transform: rotate(-45deg) translate(5px, -6px);
    }

    #logo {
      background-image: url("/globussort.svg");
      aspect-ratio: 1 / 1;
      width: 50px;
      background-size: cover;
    }

    nav.active .desktop_nav {
      display: block;
      background-color: #fff;
      position: absolute;
      top: 75px;
      right: 0;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      z-index: 1;
      padding: 1rem;
      border-radius: 5px;
      min-width: 280px;
      transition: 0.5s linear;
    }

    nav.active .desktop_nav li {
      border-bottom: 1px solid var(--sub-color);
      padding: 0.5rem 0;
    }

    nav.active .desktop_nav li:first-child {
      display: block;
    }

    nav.active .desktop_nav li:last-child,
    nav.active .desktop_nav li:nth-child(4) {
      border-bottom: 0;
    }

    nav.active .desktop_nav li:last-child {
      text-align: center;
    }
  }
</style>

<script>
  const burger = document.querySelector("#mobile_nav");
  const nav = document.querySelector("nav");
  const dropdown = document.querySelector(".dropdown");

  burger.addEventListener("click", () => {
    burger.classList.toggle("active");
    nav.classList.toggle("active");
    dropdown.classList.remove("active");
  });

  dropdown.addEventListener("click", () => {
    dropdown.classList.toggle("active");
  });
</script>
